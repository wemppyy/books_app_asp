@page
@model books_app.Pages.AuthorProfileModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h1 class="card-title mb-0">Author Profile</h1>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name:</label>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="border p-2 bg-light">@Model.Author.FirstName</div>
                            </div>
                            <div class="col-sm-6">
                                <div class="border p-2 bg-light">@Model.Author.LastName</div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth:</label>
                        <div class="border p-2 bg-light">@Model.Author.DateOfBirth</div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-primary flex-fill" href="/Author?id=@Model.AuthorId">Edit</a>
                        <form method="post" asp-page-handler="Delete" class="flex-fill" style="margin:0">
                            <input type="hidden" asp-for="Author.Id" />
                            <input type="hidden" name="id" value="@Model.Author?.Id" />
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>